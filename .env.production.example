# Variables de entorno para producción - EJEMPLO
# ⚠️ COPIA ESTE ARCHIVO A .env.production Y CAMBIA TODOS LOS VALORES

# Base de datos PostgreSQL
POSTGRES_PASSWORD=CAMBIAR_PASSWORD_SUPER_SEGURO
DATABASE_URL=postgresql://groundedgrowth:CAMBIAR_PASSWORD_SUPER_SEGURO@postgres:5432/groundedgrowth_prod

# JWT Secret (generar una clave de al menos 64 caracteres)
JWT_SECRET=CAMBIAR_POR_CLAVE_JWT_MUY_LARGA_Y_SEGURA_DE_AL_MENOS_64_CARACTERES

# API de IA (obtener de OpenAI)
OPENAI_API_KEY=sk-CAMBIAR_POR_TU_CLAVE_OPENAI

# Configuración de puertos
BACKEND_PORT=3001
FRONTEND_PORT=80

# URLs de la aplicación
NODE_ENV=production
FRONTEND_URL=https://tu-dominio.com
BACKEND_URL=https://api.tu-dominio.com

# Configuración adicional
JWT_EXPIRES_IN=7d