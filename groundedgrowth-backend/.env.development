# GroundedGrowth Backend Environment Variables
# Copia este archivo a .env y configura los valores

# Database (SQLite para desarrollo - NO requiere instalación)
DATABASE_URL="file:./dev.db"

# JWT (CAMBIAR en producción)
JWT_SECRET="groundedgrowth-development-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# API Keys (opcionales - dejar vacío para usar simulación)
OPENAI_API_KEY=""
GEMINI_API_KEY=""

# CORS
CORS_ORIGIN="http://localhost:4200"

# Logging
LOG_LEVEL="info"